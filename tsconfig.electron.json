{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2020",
      "noEmit": false,
      "allowImportingTsExtensions": false,
      "esModuleInterop": true,
      "outDir": "dist-electron",
      "skipLibCheck": true,
      "composite": true,
      "declaration": true
    },
    "include": ["electron", "src/types"]
  }