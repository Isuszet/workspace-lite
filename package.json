{
  "name": "workspace-lite",
  "version": "1.0.0",
  "type": "module",
  "description": "Notion-подобное офлайн рабочее пространство для заметок, задач и инструкций",
  "main": "dist-electron/electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:compile": "tsc -p tsconfig.electron.json && node scripts/fix-electron-extensions.cjs",
    "electron:wait": "wait-on http-get://127.0.0.1:5173 -t 60000 -i 2000 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"npm run electron:wait\"",
    "electron:dev:manual": "npm run electron:compile",
    "electron:dev:simple": "npm run electron:compile && npm run dev",
    "electron:start": "cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "electron:build": "npm run build && electron-builder",
    "package": "npm run build && electron-builder --dir",
    "fix-winsign": "node scripts/fix-winsign.cjs",
    "dist": "npm run fix-winsign && npm run build && electron-builder --dir",
    "dist:installer": "npm run fix-winsign && npm run build && electron-builder",
    "dist:portable": "npm run fix-winsign && npm run build && electron-builder --win portable --x64",
    "build:all": "node scripts/build.cjs all",
    "build:win": "node scripts/build.cjs win",
    "build:mac": "node scripts/build.cjs mac",
    "build:linux": "node scripts/build.cjs linux",
    "clean": "node scripts/build.cjs clean"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.10.3",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.workspace.lite",
    "productName": "Workspace Lite",
    "forceCodeSigning": false,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Workspace Lite",
      "deleteAppDataOnUninstall": false,
      "menuCategory": "Productivity",
      "runAfterFinish": true
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Workspace Lite",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "sign": null,
      "signDlls": false,
      "signExts": []
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "icon": "build/icon.png",
      "desktop": {
        "Name": "Workspace Lite",
        "Comment": "Офлайн рабочее пространство для заметок, задач и инструкций",
        "Categories": "Office;Productivity;",
        "StartupNotify": true
      }
    }
  }
}